{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext",
    "watch": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "coverage",
    "jest.config.ts"
  ]
}
